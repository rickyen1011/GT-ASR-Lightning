{
    "exp_dir": "mswc-tr-MP-top30_lp_map",
    "unit": "MP",
    "trainer":{
        "max_epochs": 30,
        "deterministic": false,
        "val_check_interval": 1.0,
        "accumulate_grad_batches": 1,
        "greedy_first": false,
        "early_stop": {
            "monitor": "val/acc",
            "mode": "max",
            "patience": 5
        }
    },
    "lightning_module": {
        "module": "lightning_modules.regular_module",
        "main": "BaseASRModule"
    },
    "ASR_model": {
        "module": "models.ssl_lp",
        "main": "SSLASRLP",
        "args": {
            "base_args": {
                "num_class": 33
            },
            "SSL_backbone_args": {
                "pretrained_model": "wav2vec2_base",
                "d_encoder": 768,
                "linear_prob": true,
                "map": true,
                "regularization_weight": 1.0
            }
        }
    },
    "decoder": {
        "greedy_decoder":{
            "module": "models.decoder",
            "main": "GreedyDecoder",
            "args": {}
        }        
    },
    "optimizer": {
        "lr": 1e-3,
        "beta1": 0.9,
        "beta2": 0.98,
        "weight_decay": 0.0
    },
    "lr_scheduler":{
        "threshold": 1e-2,
        "factor": 0.5,
        "patience": 1,
        "min_lr": 1e-5,
        "verbose": true
    },
    "train_dataset": {
        "module": "datasets.ctc.waveform_dataset",
        "main": "Dataset", 
        "args": {
            "root_dir": "/mnt/disk2/rickyen/Datasets/mswc/audio",
            "data_dir": "data/mswc-tr-MP-top30",
            "json_file": "train.json",
            "lexicon_file": "lexicon_MP.txt",
            "split": null
        }
    },
    "validation_dataset": {
        "module": "datasets.ctc.waveform_dataset",
        "main": "Dataset",
        "args": {
            "root_dir": "/mnt/disk2/rickyen/Datasets/mswc/audio",
            "data_dir": "data/mswc-tr-MP-top30",
            "json_file": "dev.json",
            "lexicon_file": "lexicon_MP.txt",
            "split": null
        },
        "beam_search_decoder": {
            "token_file": "MP_lp.txt",
            "lm_file": "id_lm.bin",
            "lm_weight": 3.23,
            "word_score": -0.26
        }
    },
    "train_dataloader": {
        "batch_size": 256,
        "num_workers": 32,
        "shuffle": true,
        "pin_memory": true,
        "collate_fn": {
            "module": "datasets.ctc.waveform_dataset",
            "main": "Collate",
            "args": {
                "data_dir": "data/mswc-tr-MP-top30",
                "token_file": "MP_lp.json"
            }
        }
    },
    "val_dataloader": {
        "batch_size": 256,
        "num_workers": 32,
        "collate_fn": {
            "module": "datasets.ctc.waveform_dataset",
            "main": "Collate",
            "args": {
                "data_dir": "data/mswc-tr-MP-top30",
                "token_file": "MP_lp.json"
            }
        }
    }
}