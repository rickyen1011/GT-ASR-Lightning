{
    "exp_dir": "mswc-en-fr-it-ru-es-de-MP-thresh100-num1000",
    "unit": "MP",
    "trainer":{
        "max_epochs": 20,
        "deterministic": false,
        "val_check_interval": 0.5,
        "accumulate_grad_batches": 1,
        "early_stop": {
            "monitor": "val/acc",
            "mode": "max",
            "patience": 3
        }
    },
    "lightning_module": {
        "module": "lightning_modules.regular_module",
        "main": "BaseASRModule"
    },
    "ASR_model": {
        "module": "models.ssl",
        "main": "SSLASR",
        "args": {
            "base_args": {
                "num_class": 33
            },
            "SSL_backbone_args": {
                "pretrained_model": "wav2vec2_base",
                "d_encoder": 768
            }
        }
    },
    "decoder": {
        "greedy_decoder":{
            "module": "models.decoder",
            "main": "GreedyDecoder",
            "args": {}
        }        
    },
    "optimizer": {
        "lr": 5e-5,
        "beta1": 0.9,
        "beta2": 0.98,
        "weight_decay": 0.0
    },
    "lr_scheduler":{
        "threshold": 1e-2,
        "factor": 0.5,
        "patience": 2,
        "min_lr": 1e-6
    },
    "train_dataset": {
        "module": "datasets.ctc.waveform_dataset",
        "main": "Dataset", 
        "args": {
            "root_dir": "/mnt/disk2/rickyen/Datasets/mswc/audio",
            "data_dir": "./data/mswc-en-fr-it-ru-es-de-MP-thresh100-num1000",
            "json_file": "train.json",
            "lexicon_file": "lexicon_MP.txt",
            "split": null
        }
    },
    "validation_dataset": {
        "module": "datasets.ctc.waveform_dataset",
        "main": "Dataset",
        "args": {
            "root_dir": "/mnt/disk2/rickyen/Datasets/mswc/audio",
            "data_dir": "./data/mswc-en-fr-it-ru-es-de-MP-thresh100-num1000",
            "json_file": "dev.json",
            "lexicon_file": "lexicon_MP.txt",
            "split": null
        },
        "beam_search_decoder": {
            "token_file": "MP.txt",
            "lm_file": "id_lm.bin",
            "lm_weight": 3.23,
            "word_score": -0.26
        }
    },
    "train_dataloader": {
        "batch_size": 256,
        "num_workers": 32,
        "shuffle": true,
        "pin_memory": true,
        "collate_fn": {
            "module": "datasets.ctc.waveform_dataset",
            "main": "Collate",
            "args": {
                "data_dir": "./data/mswc-en-fr-it-ru-es-de-MP-thresh100-num1000",
                "token_file": "MP.json"
            }
        }
    },
    "val_dataloader": {
        "batch_size": 128,
        "num_workers": 32,
        "collate_fn": {
            "module": "datasets.ctc.waveform_dataset",
            "main": "Collate",
            "args": {
                "data_dir": "./data/mswc-en-fr-it-ru-es-de-MP-thresh100-num1000",
                "token_file": "MP.json"
            }
        }
    }
}